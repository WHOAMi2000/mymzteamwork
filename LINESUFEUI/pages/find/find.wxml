<view class='movie-list-wrapper'>
  <view x-scroll='false' class="movie-list" style='transform: translateX( {{movieDistance}}rpx)' bindtouchstart="onTouchStart" bindtouchend="onTouchEnd">

    <view class="nav-item {{classArray[index] ? classArray[index] : ''}}" wx:for="{{movieData}}" data-index="{{index}}">
      <image class='movie-image' src='{{item.image}}' mode='aspectFill'></image>
      <view class='movie-info'>
        <view class='movie-title'>{{item.title}}</view>
        <view class='movie-type'>{{item.grade}}  /  {{item.school}} / {{item.constellation}}</view>
        <navigator class="" url="/pages/infodetails/infodetails">
            <image class="info" src="/images/info.png" mode="aspectFill" ></image>
        </navigator>
        
      </view>
    </view>
  </view>
</view>


<view class="page_ft">
      <image class="notlike" src="/images/nlove1.png"></image>
      <image class="like" src="/images/love1.png"></image>
</view>







