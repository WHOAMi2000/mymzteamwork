page {
  background-color: #fff;
  
}
.content {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
}
.touxiang {
  width: 160rpx;
  height: 150rpx;
  float: left;
}
.touxiang image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  float: left;
}
.nicheng {
  width: 590rpx;
  height: 150rpx;
  border-bottom: .5rpx solid rgb(158, 141, 141);
  float: right;
}
.nickname {
  width: 380rpx;
  height: 50rpx;
  float: left;
  font-size: 36rpx;
  font-weight: bold;
  columns: #334038;
  text-align: left;
  margin-top: 25rpx;
  margin-left: 10rpx;
}

.message{
  height: 30rpx;
  float: left;
  font-size: 30rpx;
  color: grey;
  text-align: left;
  margin-top: 90rpx;
  margin-left: -380rpx;
}

.time{
  width: 170rpx;
  height: 30rpx;
  float: right;
