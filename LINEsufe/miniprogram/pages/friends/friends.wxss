page {
  background-color: #fff;
  opacity: .8;
}
.content {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
}
.touxiang {
  width: 160rpx;
  height: 150rpx;
  float: left;
}
.touxiang image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 80rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  float: left;
}
.nicheng {
  width: 590rpx;
  height: 150rpx;
  border-bottom: .5rpx solid rgb(158, 141, 141);
  float: right;
}
.nickname {
  width: 380rpx;
  height: 50rpx;
  float: left;
  font-size: 36rpx;
  columns: #334038;
