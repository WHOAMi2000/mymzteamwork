/* pages/me/me.wxss */
.container {
  width: 100%;
  padding-top: 50rpx;
  background-color: white;
}
.introduction{
  width: 90%;
  margin-bottom: 20px;
}
.cards{
  margin-bottom: 20px;
  width: 100%;
}
.introduction_title{
  font-family: Georgia, 'Times New Roman', Times, serif;
  margin-bottom: 10px;
  display: flex;
}
.pic_title{
  margin-top: 11rpx;
}
.arrow{
  margin-left: 73%;
  margin-top: 11rpx;
}
p{
  font-family: Georgia, 'Times New Roman', Times, serif;
}
.avater {
  width: 300rpx;
  height: 300rpx;
  border-radius: 300rpx;
  float: center;
}
.pic{
  margin-bottom: 20px;
  display: flex;/* 如果把盒子设置为弹性盒子,必须要加的 */  
  align-items: center;/* 设置一个大盒子内容居中排列*/  
}
.slideimages{
  float: center;
}
.i-tags{
  display: flex;
  justify-content: space-around;
}
.label{
  margin-bottom: 20px;
}
.passive{
  margin-bottom: 20px;
}
.percontent {
  width: 100%;
  display: flex;/* 如果把盒子设置为弹性盒子,必须要加的 */  
  flex-direction: column;/* 设置一个大盒子内容垂直排列*/  
  align-items: center;/* 设置一个大盒子内容居中排列*/   
}

.name {
  text-align: center;
  margin: 20rpx;
  line-height: 1;
  color: #495060;
  font-size: 36rpx;
}
.quote{
  margin: 10rpx;
}
.user_name {
  font-weight: bold;
  font-size: larger;
  font-family: Arial, Helvetica, sans-serif;
}

.briefintro {
  font-size: medium;
  box-sizing: border-box;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.details {
  width: 100%;
