.item{
  text-align: center;
  margin-top: 15px;
  border-bottom: grey solid 1px;
  height: 130rpx;
}
.intro{
  height: 10rpx;
  margin-bottom: 10px;
}

.academy{
  font-size: 14px;
  font-family: Georgia, 'Times New Roman', Times, serif;
}
